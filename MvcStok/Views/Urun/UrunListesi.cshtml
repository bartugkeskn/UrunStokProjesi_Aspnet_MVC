@using MvcStok.Models.Entity
@model List<TblUrunler>
@{
    ViewBag.Title = "UrunListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var i in Model)  // foreach içindeki Model en yukarıda tanımladığımız model List<TblUrunler> oluyor
        {
            <tr>
                <td>@i.URUNID</td>
                <td>@i.URUNAD</td>
                <td>@i.MARKA</td>
                <td>@i.URUNKATEGORI</td>
                <td>@i.FIYAT</td>
                <td>@i.STOK</td>
                <td><a href="/Urun/Sil/@i.URUNID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Urun/Guncelle/@i.URUNID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Urun/YeniUrun" class="btn btn-primary">Yeni Ürün Ekle</a>
