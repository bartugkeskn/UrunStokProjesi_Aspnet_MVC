@using MvcStok.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblKategoriler>

@{
    ViewBag.Title = "KategoriListesi";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach(var i in Model)
            {
                <tr>
                    <td>@i.KATEGORIID</td>
                    <td>@i.KATEGORIAD</td>
                    <td><a href="/Kategori/Sil/@i.KATEGORIID" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Kategori/KategoriGuncelle/@i.KATEGORIID" class="btn btn-warning">Güncelle</a></td>
                </tr>
            }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("KategoriListesi", new { sayfa }))
<br />
<a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni Kategori Ekle</a>
